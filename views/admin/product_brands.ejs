<%- include('navbar.ejs') %>

<div class="main-content">
    <div class="container">
        <h1 class="mb-4">Product Brands</h1>
        
        <!-- Add Brand Form -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Add New Brand</h5>
                <form action="/admin/save_product_brand" method="post">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">Brand Name</label>
                                <input type="text" class="form-control" name="product_brand_name" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-primary w-100">Save Brand</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Brands Table -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Brand List</h5>
                <% if(brands.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th width="60">Sr.No</th>
                                    <th>Brand Name</th>
                                    <th width="150" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0;i<brands.length;i++) { %>
                                    <tr>
                                        <td><%= i+1 %></td>
                                        <td><%= brands[i].product_brand_name %></td>
                                        <td class="text-center">
                                            <a href="/admin/edit_product_brand/<%= brands[i].product_brand_id %>" 
                                               class="btn btn-sm btn-outline-primary me-1">
                                                Edit
                                            </a>
                                            <a href="/admin/delete_product_brand/<%= brands[i].product_brand_id %>" 
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Are you sure?')">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <p class="text-muted">No brands found. Add your first brand above.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('footer.ejs') %>
    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-bg: #fff;
            --primary-color: #696cff;
            --sidebar-text: #697a8d;
            --sidebar-active: #696cff;
            --sidebar-hover: #e7e7ff;
            --topbar-height: 60px;
        }
       
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f5f9;
            overflow-x: hidden;
        }
        
        /* Top Navbar */
        .navbar-top {
            height: var(--topbar-height);
            background: white;
            box-shadow: 0 1px 2px rgba(56, 65, 74, 0.15);
            position: fixed;
            top: 0;
            right: 0;
            left: var(--sidebar-width);
            z-index: 1000;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
             height: 100vh;
            background: black;
            position: fixed;
            top: 0;
            left: 0;
            height:100vh;
            z-index:1001;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05); 
            transition: all 0.3s ease;
            overflow-y:auto;  
        }
        .sidebar-brand {
            height: var(--topbar-height);
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid #e7e7e7;
        }
        
        .sidebar-nav {
            padding: 20px 0;
        }
        
        .nav-item {
            margin-bottom: 5px;
        }
        .nav-link {
            color: var(--sidebar-text);
            padding: 12px 20px;
            border-radius: 0;
            display: flex;
            align-items: center;
            transition: all 0.2s;
            position: relative;
        }
        
        .nav-link:hover {
            color: var(--primary-color);
            background-color: var(--sidebar-hover);
        }
        
        .nav-link.active {
            color: var(--sidebar-active);
            background-color: var(--sidebar-hover);
            border-left: 4px solid var(--primary-color);
            padding-left: 16px;
        }
        
        .nav-link i {
            width: 24px;
            font-size: 18px;
            margin-right: 10px;
        }
       
        .nav-link .badge {
            margin-left: auto;
            font-size: 0.7rem;
        }
      
        .nav-divider {
            padding: 10px 20px;
            color: #a1acb8;
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 600;
            margin-top: 20px;
        }
        
        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            margin-top: var(--topbar-height);
            padding: 20px;
            min-height: calc(100vh - var(--topbar-height));
        }
        
        /* Responsive */
        @media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
            }
            
            .sidebar.show {
                transform: translateX(0);
            }
            
            .navbar-top {
                left: 0;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .sidebar-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 1000;
            }
            
            .sidebar-overlay.show {
                display: block;
            }
        }
        
        /* Toggle Button */
        .sidebar-toggle {
            border: none;
            background: transparent;
            font-size: 1.5rem;
            color: #566a7f;
        }
        
        /* Search Box */
        .search-box {
            width: 300px;
            border-radius: 6px;
            border: 1px solid #d9dee3;
            padding: 0.5rem 1rem;
        }

        .search-box:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 2px rgba(105, 108, 255, 0.16);
        }
        
        /* User Dropdown */
        .user-dropdown img {
            width: 32px ;
            height: 32px;
            border-radius:50%;
        }
        
        /* Cards */
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 20px;
        }
        
        .card-header {
            background: white;
            border-bottom: 1px solid #e7e7e7;
        }
        
        /* Color Utilities */
        .text-primary {
            color: var(--primary-color) !important;
        }
        
        .bg-primary {
            background-color: var(--primary-color) !important;
        }
    </style>
